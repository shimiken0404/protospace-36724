<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        <%#= "こんにちは、#{current_user.nickname}さん" %>
        <%= link_to "こんにちは、#{current_user.nickname}さん", user_path(current_user), class: :greeting__link%>
      </div>
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
    <div class="card__wrapper">
        <%= render partial: "prototype", collection: @prototypes %>
    </div>
  </div>
</main>
